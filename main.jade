body
    unless $.Session.get 'editing'
        +nav
    .ui.container
        +posts

template(name='nav')
    .ui.menu
        a#home.ui.item Facet
        .ui.input
            +inputAutocomplete settings=settings id='search' class='' placeholder='search...' autofocus=''
        .right.menu
            if currentUser
                a#mine.ui.item My Posts
                a#add.ui.item
                    i.plus.icon
                    |Add
            .ui.item
                +loginButtons
    .ui.secondary.segment
        if somethingSelected
            #clear.ui.circular.active.icon.basic.button
                i.remove.icon
                |Clear Selection
        each selectedAuthor
            .unselectAuthor.ui.basic.large.button
                i.user.icon
                strong #{this}
        each selectedTags
            .toggleOff.ui.active.basic.large.button #{this}
        each hundredtags
            .ui.basic.button.hometag
                |#{this.name}
                small #{this.count}

template(name='posts')
    each posts
        .ui.segment
            +post

template(name='post')
    if editing
        +edit
    else
        each tags
            .ui.compact.basic.button.posttag(class=posttagclass) #{this}
        |by
        if isAuthor
            |  Me
            a#edit.ui.basic.icon.circular.button
                i.edit.icon
                |Edit This
        else
            .author.ui.compact.button #{author.username}
        .ui.hidden.fitted.divider
        +markdown
            #{body}

template(name='edit')
    .content
        .ui.form
            .field
                select#tagselector.ui.multiple.search.dropdown(multiple='true')
                    each tags
                        option(value=this selected='selected') #{this}
            .field
                +CodeMirror id='codebody' name='codemirror' options=editorOptions code=body
        .ui.hidden.divider
        .bottomGroup
            #save.ui.basic.button save
            unless $.Session.get 'adding'
                #cancel.ui.small.basic.compact.button cancel
            #delete.ui.right.floated.small.basic.compact.button
                if $.Session.get 'adding'
                    |cancel
                else
                    |delete

template(name='tagresult')
    .ui.label #{name} #{count}